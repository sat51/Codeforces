import java.util.*;
public class sol{
    public static void main(String[] args){
        Scanner sc = new Scanner(System.in);
        int[] arr = new int[3];
        for(int i =0;i<3;i++){
            arr[i] = sc.nextInt();
        }
        Arrays.sort(arr);
        int min = arr[2] - arr[0];
        System.out.println(min);
    }
}
